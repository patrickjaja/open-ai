{% extends template('widget') %}

{% define data = {
    product: product | default,
    products: products | default([])
} %}


{% block body %}
        {% for availableProduct in data.products %}
            {% if availableProduct.available %}
                {% widget 'CmsProductGroupWidget' args [availableProduct] only %}{% endwidget %}
            {% endif%}
        {% endfor %}
{% endblock %}
