{% extends template('page-layout-main') %}

{% define data = {
    activePage: 'overview'
} %}

{% block breadcrumbs %}{% endblock %}

{% block title %}
    <h1 class="title title--account-main title--medium">{{data.title}}</h1>
{% endblock %}

{% block content %}
    <div class="grid page-layout-customer">
        <div class="col col--sm-12 col--md-12 col--lg-3 is-hidden-sm-md">
            {% block customerNavigation %}
                <div class="box" data-qa="customer-account-sidebar">
                    {% widget 'CustomerNavigationWidget' args [data.activePage] only %}
                        {% block body %}
                            {% define data = {
                                modifiers: ['customer-navigation']
                            } %}
                            {{ parent() }}
                        {% endblock %}
                    {% endwidget %}
                </div>
            {% endblock %}
        </div>

        <div class="col col--sm-12 col--md-12 col--lg-9">
            {% block customerContent %}{% endblock %}
        </div>
    </div>
{% endblock %}
