{% extends model('component') %}

{% define config = {
    name: 'product-options',
} %}

{% define data = {
    options: null,
} %}

{% block component %}
    {% if data.options is not empty %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block body %}
    <ul>
        {% for option in data.options %}
            <li class="{{ config.name }}__item grid">
                <span class="col col--sm-9">+ {{ option.value | trans }}</span>

                {% if can('SeePricePermissionPlugin') %}
                    <span class="spacing-left spacing-left--inner text-right col col--sm-3">{{ option.unitPrice | money }}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
