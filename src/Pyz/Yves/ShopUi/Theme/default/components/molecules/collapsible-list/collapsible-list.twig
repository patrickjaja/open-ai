{% extends molecule('collapsible-list', 'SprykerShop:ShopUi') %}

{% define data = {
    itemsShown: 0,
} %}

{% define attributes = {
    'list-trigger-class': 'is-hidden-sm-md',
} %}

{% macro listItem(label, value, configName) %}
    <div class="{{ configName }}__name">{{ label }}</div>
    <div class="{{ configName }}__value">{{ value }}</div>
{% endmacro %}

{% block body %}
    {% set wrapperClass = config.name ~ '__wrapper' %}
    {% set collapseWrapperClass = config.name ~ '__collapse-wrapper' %}
    {% set buttonWrapperClass = config.name ~ '__button-wrapper' %}

    {{ parent() }}
{% endblock %}

{% block shownListItems %}
    {{ _self.listItem(key, value, config.name) }}
{% endblock %}

{% block hiddenListItems %}
    {{ _self.listItem(key, value, config.name) }}
{% endblock %}
