{% extends model('component') %}

{% define config = {
    name: 'slick-carousel',
    tag: 'slick-carousel',
} %}

{% define data = {
    slides: [],
    containerClass: '',
} %}

{% define attributes = {
    'data-json': '',
} %}

{% block body %}
    <div class="{{ config.name }}__container {{ config.jsName }}__container {{ data.containerClass }}">
        {% block slides %}
            {% for slide in data.slides %}
                {{ slide }}
            {% endfor %}
        {% endblock %}
    </div>
{% endblock %}
