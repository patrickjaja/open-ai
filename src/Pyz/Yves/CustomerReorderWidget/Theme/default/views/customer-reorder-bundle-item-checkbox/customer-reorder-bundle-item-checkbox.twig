{% extends view('customer-reorder-bundle-item-checkbox', '@SprykerShop:CustomerReorderWidget') %}

{% define data = {
    additionalModifiers: [],
} %}

{% block body %}
    {% include atom('checkbox') with {
        modifiers: data.additionalModifiers,
        data: {
            inputClass: data.checkboxClasses,
        },
        attributes: {
            name: 'bundle-item-identifiers[]',
            disabled: not data.availability,
            value: data.bundleItemIdentifier,
        },
    } only %}
{% endblock %}
